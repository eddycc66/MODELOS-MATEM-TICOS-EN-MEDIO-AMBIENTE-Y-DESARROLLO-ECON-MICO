# 1. PARÁMETROS DEL MODELO (DATOS REALES BOLIVIA)
# ============================================================================

class ParametrosBolivia:
    """Parámetros del modelo adaptados a la realidad boliviana"""

    def __init__(self):
        # Reservas probadas de gas natural (MMMpc - millones de metros cúbicos pie)
        self.reservas_totales = 10.7  # TCF (trillones de pies cúbicos) -> ~303 MMMpc
        self.reservas_actuales = 303.0  # MMMpc (Millones de Metros Cúbicos Pie)

        # Tasa de interés real (costo de oportunidad del capital)
        self.tasa_interes = 0.05  # 5% anual

        # Costos de extracción (USD/MMBtu)
        self.costo_extraccion_base = 0.8  # Costo marginal base
        self.costo_extraccion_aumento = 0.02  # Incremento por agotamiento

        # Precios históricos y proyecciones (USD/MMBtu)
        self.precio_actual = 4.5  # Precio promedio 2024
        self.volatilidad_precio = 0.25  # Volatilidad anual

        # Costos de transporte a mercados (USD/MMBtu)
        self.costos_transporte = {
            'Argentina': 0.8,
            'Brasil': 1.2,
            'Mercado Interno': 0.3,
            'Exportación LNG': 3.5  # Gas natural licuado
        }

        # Demanda de mercados vecinos (MMMpc/año)
        self.demanda_mercados = {
            'Argentina': {'2025': 15, '2030': 18, '2035': 20},
            'Brasil': {'2025': 25, '2030': 28, '2035': 30},
            'Mercado Interno': {'2025': 10, '2030': 12, '2035': 15}
        }

        # Capacidad de exportación (MMMpc/año)
        self.capacidad_exportacion = 45

        # Horizonte temporal del modelo (años)
        self.horizonte = 30  # 2025-2055

# ============================================================================
# 2. MODELO DE HOTELLING CON EXTENSIONES REALISTAS
# ============================================================================

class ModeloHotellingBolivia:
    """Implementación del modelo de Hotelling con extensiones para Bolivia"""

    def __init__(self, params):
        self.params = params
        self.n_periodos = params.horizonte

    def precio_neto(self, stock_actual, precio_mercado, mercado_destino='Brasil'):
        """Calcula el precio neto (precio menos costos)"""
        costo_marginal = self.params.costo_extraccion_base + \
                        self.params.costo_extraccion_aumento * \
                        (1 - stock_actual/self.params.reservas_actuales)

        costo_transporte = self.params.costos_transporte.get(mercado_destino, 1.0)

        return precio_mercado - costo_marginal - costo_transporte

    def trayectoria_optimizacion(self, precio_inicial):
        """Calcula la trayectoria óptima de extracción según Hotelling"""
        # Solución analítica simplificada del modelo
        tiempo = np.arange(self.n_periodos)
        r = self.params.tasa_interes

        # Precio neto inicial
        p0_neto = self.precio_neto(
            self.params.reservas_actuales,
            precio_inicial,
            'Brasil'
        )

        # Trayectoria de precios según regla de Hotelling
        precios_netos = p0_neto * np.exp(r * tiempo)

        # Precios de mercado reconstruidos
        precios_mercado = []
        extraccion_optima = []
        stock_restante = self.params.reservas_actuales

        for t in range(self.n_periodos):
            # Precio de mercado necesario
            p_mercado = precios_netos[t] + \
                       self.params.costo_extraccion_base + \
                       self.params.costo_extraccion_aumento * \
                       (1 - stock_restante/self.params.reservas_actuales) + \
                       self.params.costos_transporte['Brasil']

            # Extracción óptima (simplificación)
            extraccion = min(
                self.params.capacidad_exportacion,
                stock_restante * 0.05  # No más del 5% anual
            )

            # Ajustar por límites físicos
            if stock_restante - extraccion < 0:
                extraccion = max(0, stock_restante)

            stock_restante -= extraccion

            precios_mercado.append(p_mercado)
            extraccion_optima.append(extraccion)

        return {
            'tiempo': tiempo,
            'precios_netos': precios_netos,
            'precios_mercado': precios_mercado,
            'extraccion': extraccion_optima,
            'stock': [self.params.reservas_actuales - sum(extraccion_optima[:i+1])
                     for i in range(self.n_periodos)]
        }

    def simulacion_precios_volatiles(self, n_simulaciones=100):
        """Simulación Monte Carlo de precios internacionales volátiles"""
        precios_simulados = []
        r = self.params.tasa_interes
        precio_actual = self.params.precio_actual
        volatilidad = self.params.volatilidad_precio

        for _ in range(n_simulaciones):
            # Proceso de movimiento browniano geométrico
            z = np.random.normal(0, 1, self.n_periodos)
            precios = [precio_actual]

            for t in range(1, self.n_periodos):
                precio_t = precios[-1] * np.exp(
                    (r - 0.5 * volatilidad**2) * 1 +
                    volatilidad * z[t]
                )
                precios.append(precio_t)

            precios_simulados.append(precios)

        return np.array(precios_simulados)

