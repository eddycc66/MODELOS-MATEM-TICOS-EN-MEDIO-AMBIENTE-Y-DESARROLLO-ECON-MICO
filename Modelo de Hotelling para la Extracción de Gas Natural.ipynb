    analisis = AnalisisMercados(params)

    # Rentabilidad por mercado
    df_rentabilidad = analisis.calcular_rentabilidad_mercados()

    # Optimización de asignación
    asignacion_optima, valor_total = analisis.optimizacion_asignacion(
        params.capacidad_exportacion
    )

    # 4. Resultados clave
