                      'São Paulo', 'Buenos Aires', 'Puerto Suárez'],
            'Lat': [-17.8, -16.5, -17.4, -22.0, -23.5, -34.6, -18.9],
            'Lon': [-63.2, -68.1, -66.2, -63.7, -46.6, -58.4, -57.8],
            'Tipo': ['Producción', 'Consumo', 'Consumo', 'Exportación',
                    'Consumo', 'Consumo', 'Exportación'],
            'Capacidad': [100, 15, 12, 45, 30, 20, 45]
        })

        fig = px.scatter_geo(
            datos_mapa,
            lat='Lat',
            lon='Lon',
            color='Tipo',
            size='Capacidad',
            hover_name='Ciudad',
            projection='natural earth',
            title='Mapa de Producción y Exportación de Gas Natural en Bolivia',
            size_max=30
        )

        # Añadir líneas de exportación
        rutas = [
            {'origen': 'Santa Cruz', 'destino': 'São Paulo', 'capacidad': 30},
            {'origen': 'Santa Cruz', 'destino': 'Buenos Aires', 'capacidad': 15},
            {'origen': 'Yacuiba', 'destino': 'Buenos Aires', 'capacidad': 20},
            {'origen': 'Puerto Suárez', 'destino': 'São Paulo', 'capacidad': 15}
        ]

        for ruta in rutas:
            origen = datos_mapa[datos_mapa['Ciudad'] == ruta['origen']].iloc[0]
            destino = datos_mapa[datos_mapa['Ciudad'] == ruta['destino']].iloc[0]

            fig.add_trace(go.Scattergeo(
                lon=[origen['Lon'], destino['Lon']],
                lat=[origen['Lat'], destino['Lat']],
                mode='lines',
                line=dict(width=ruta['capacidad']/5, color='red'),
                opacity=0.5,
                showlegend=False
            ))

        fig.update_layout(
            geo=dict(
                showland=True,
                landcolor='lightgreen',
                countrycolor='white',
                coastlinecolor='blue',
                showcountries=True,
                projection_scale=3,
                center=dict(lat=-17, lon=-65)
            ),
            height=600
        )

        return fig

    @staticmethod
    def grafico_trayectorias_hotelling(trayectoria, precios_simulados):
        """Grafica trayectorias óptimas de extracción"""
        fig = make_subplots(
            rows=2, cols=2,
            subplot_titles=('Trayectoria Óptima de Extracción',
                          'Evolución de Precios Netos',
                          'Stock de Reservas Remanentes',
                          'Simulación de Precios Internacionales'),
            vertical_spacing=0.15,
            horizontal_spacing=0.15
        )

        tiempo = trayectoria['tiempo']
        años = 2025 + tiempo

        # 1. Extracción óptima
        fig.add_trace(
            go.Scatter(
                x=años,
                y=trayectoria['extraccion'],
                mode='lines+markers',
                name='Extracción Óptima',
                line=dict(color='blue', width=3),
                fill='tozeroy',
                fillcolor='rgba(0,0,255,0.1)'
            ),
            row=1, col=1
        )

        # 2. Precios netos
        fig.add_trace(
            go.Scatter(
                x=años,
                y=trayectoria['precios_netos'],
                mode='lines',
                name='Precio Neto (Hotelling)',
                line=dict(color='green', width=3, dash='dash')
            ),
            row=1, col=2
        )

        fig.add_trace(
            go.Scatter(
                x=años,
                y=trayectoria['precios_mercado'],
                mode='lines',
                name='Precio Mercado',
                line=dict(color='red', width=2)
            ),
            row=1, col=2
        )

        # 3. Stock de reservas
        fig.add_trace(
            go.Scatter(
                x=años,
                y=trayectoria['stock'],
                mode='lines',
                name='Reservas Remanentes',
                line=dict(color='orange', width=3),
                fill='tozeroy',
                fillcolor='rgba(255,165,0,0.2)'
            ),
            row=2, col=1
        )

        # 4. Simulación de precios
        for i in range(min(10, len(precios_simulados))):
            fig.add_trace(
                go.Scatter(
                    x=años,
                    y=precios_simulados[i],
                    mode='lines',
                    name=f'Simulación {i+1}',
                    line=dict(width=1, color='gray'),
                    opacity=0.3,
                    showlegend=False
                ),
                row=2, col=2
            )

        # Precio promedio
        precio_promedio = np.mean(precios_simulados[:10], axis=0)
        fig.add_trace(
            go.Scatter(
                x=años,
                y=precio_promedio,
                mode='lines',
                name='Precio Promedio',
                line=dict(color='black', width=3)
            ),
            row=2, col=2
        )

        # Actualizar layout
        fig.update_layout(
            title_text='Modelo de Hotelling Aplicado al Gas Natural Boliviano',
            height=800,
            showlegend=True,
            hovermode='x unified'
        )

        # Actualizar ejes
        fig.update_xaxes(title_text='Año', row=1, col=1)
        fig.update_xaxes(title_text='Año', row=1, col=2)
        fig.update_xaxes(title_text='Año', row=2, col=1)
        fig.update_xaxes(title_text='Año', row=2, col=2)

        fig.update_yaxes(title_text='Extracción (MMMpc/año)', row=1, col=1)
        fig.update_yaxes(title_text='Precio (USD/MMBtu)', row=1, col=2)
        fig.update_yaxes(title_text='Reservas (MMMpc)', row=2, col=1)
        fig.update_yaxes(title_text='Precio (USD/MMBtu)', row=2, col=2)

        return fig

    @staticmethod
    def grafico_rentabilidad_mercados(df_rentabilidad):
        """Grafica análisis de rentabilidad por mercado"""
        fig = go.Figure()

        mercados = df_rentabilidad.index
        margenes = df_rentabilidad['margen']
        rentabilidades = df_rentabilidad['rentabilidad'] * 100

        fig.add_trace(go.Bar(
            x=mercados,
            y=margenes,
            name='Margen (USD/MMBtu)',
            marker_color='lightblue',
            text=margenes.round(2),
            textposition='auto'
        ))

        fig.add_trace(go.Scatter(
            x=mercados,
            y=rentabilidades,
            name='Rentabilidad (%)',
            yaxis='y2',
            mode='lines+markers',
            line=dict(color='red', width=3),
            marker=dict(size=10)
        ))

        fig.update_layout(
            title='Análisis de Rentabilidad por Mercado Destino',
            yaxis=dict(title='Margen (USD/MMBtu)'),
            yaxis2=dict(
                title='Rentabilidad (%)',
                overlaying='y',
                side='right'
            ),
            xaxis_title='Mercado Destino',
            hovermode='x unified',
            height=500
        )

        return fig

