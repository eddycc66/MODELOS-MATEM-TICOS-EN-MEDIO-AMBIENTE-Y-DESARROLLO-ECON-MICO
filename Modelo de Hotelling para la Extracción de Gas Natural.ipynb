# 3. ANÁLISIS DE MERCADOS VECINOS Y COSTOS DE TRANSPORTE
# ============================================================================

class AnalisisMercados:
    """Análisis de mercados vecinos y logística de exportación"""

    def __init__(self, params):
        self.params = params

    def calcular_rentabilidad_mercados(self):
        """Calcula rentabilidad por mercado destino"""
        mercados = list(self.params.costos_transporte.keys())
        rentabilidades = {}

        for mercado in mercados:
            # Precio estimado por mercado (USD/MMBtu)
            precios_mercado = {
                'Argentina': 4.0,
                'Brasil': 4.5,
                'Mercado Interno': 3.0,
                'Exportación LNG': 8.0
            }

            precio = precios_mercado.get(mercado, 4.0)
            costo_transporte = self.params.costos_transporte[mercado]
            costo_extraccion = self.params.costo_extraccion_base

            margen = precio - costo_extraccion - costo_transporte
            rentabilidad = margen / precio if precio > 0 else 0

            rentabilidades[mercado] = {
                'margen': margen,
                'rentabilidad': rentabilidad,
                'precio': precio,
                'costo_total': costo_extraccion + costo_transporte
            }

        return pd.DataFrame(rentabilidades).T

    def optimizacion_asignacion(self, capacidad_total):
        """Optimiza asignación de gas a diferentes mercados"""
        from scipy.optimize import linprog

        mercados = ['Argentina', 'Brasil', 'Mercado Interno', 'Exportación LNG']

        # Coeficientes de rentabilidad (maximizar)
        c = [-0.35, -0.30, -0.25, -0.15]  # Negativo porque linprog minimiza

        # Restricciones de capacidad
        A_ub = [[1, 1, 1, 1]]  # Capacidad total
        b_ub = [capacidad_total]

        # Límites de demanda por mercado (MMMpc/año)
        bounds = [
            (0, 20),   # Argentina
            (0, 30),   # Brasil
            (0, 15),   # Mercado Interno
            (0, 10)    # Exportación LNG
        ]

        # Optimización lineal
        resultado = linprog(c, A_ub=A_ub, b_ub=b_ub, bounds=bounds, method='highs')

        if resultado.success:
            asignacion = dict(zip(mercados, resultado.x))
            valor_total = -resultado.fun * 1000  # Millones USD

            return asignacion, valor_total
        else:
            return None, 0

