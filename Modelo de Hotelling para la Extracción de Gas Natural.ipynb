    viz = Visualizaciones()

    # Mostrar gráficos
    fig1 = viz.grafico_trayectorias_hotelling(trayectoria, precios_simulados)
    fig2 = viz.grafico_rentabilidad_mercados(df_rentabilidad)

    print("\n" + "="*70)
    print("ANÁLISIS COMPLETADO EXITOSAMENTE")
    print("="*70)

    return {
        'params': params,
        'modelo': modelo,
        'trayectoria': trayectoria,
        'df_rentabilidad': df_rentabilidad,
        'asignacion_optima': asignacion_optima,
        'figuras': {
            'trayectorias': fig1,
